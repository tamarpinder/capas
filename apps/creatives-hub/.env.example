# CAPAS Creatives Hub Environment Variables
# Copy this file to .env.local and update with your values

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://capas-creatives-hub.netlify.app

# Authentication (Future Implementation)
# NEXTAUTH_URL=https://capas-creatives-hub.netlify.app
# NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl

# API Configuration
NEXT_PUBLIC_API_URL=https://capas-creatives-hub.netlify.app/api
USE_MOCK_API=true

# Moodle Integration (Future)
# MOODLE_API_URL=https://your-moodle-instance.com
# MOODLE_API_TOKEN=your-token-here
# MOODLE_API_VERSION=3.11

# External Services
NEXT_PUBLIC_SCHOOL_PORTAL_URL=https://capas-school-portal.netlify.app
NEXT_PUBLIC_MAIN_WEBSITE_URL=https://capas.netlify.app

# Feature Flags
ENABLE_3D_FEATURES=false
ENABLE_REAL_TIME_CHAT=false
ENABLE_VIDEO_STREAMING=false

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=XXXXXXX

# Error Tracking (Optional)
# SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/XXXXXXX
# SENTRY_ORG=your-org
# SENTRY_PROJECT=creatives-hub